    "eslint-plugin-storybook": "^0.10.1",
    "globals": "^15.11.0",
    "playwright": "^1.48.1",
    "storybook": "^8.3.6",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vitest": "^2.1.3",
    "vitest-browser-react": "^0.0.3"
